while [ -f "$1" ]; do
    name="${1%\.*}"
    wav="${name}.wav"
    if [ "${1#*.}" == "wav" ]; then
        wav="$1"
    else
        #mplayer -novideo -ao pcm:fast "$1"
        ffmpeg -i "$1" "${name}.wav"
    fi
    lame -f "$wav"

    rm -f "$wav"
    shift
done
